<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Publicar Producto - ReLife</title>
    <link rel="stylesheet" href="css/styles.css">
    <link rel="stylesheet" href="css/publish.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    
</head>
<body>

    <header class="navbar">
        <div class="logo"><span class="re-white">RE</span>LIFE</div>
        <div class="welcome-user">Cargando...</div>
        <button class="logout-btn">Cerrar Sesión</button>
    </header>

    <main class="main-container">
        
        <form id="publish-form" action="/publish" method="POST" enctype="multipart/form-data" class="publish-grid">
            
            <input type="hidden" name="emailUsuario" id="hidden-email">
            
            <div class="card image-card">
                <button type="button" class="nav-arrow left"><i class="fas fa-caret-left"></i></button>

                <div class="image-upload-area" id="image-preview-container">
                    <input type="file" id="product-image" name="imagen" accept="image/*" hidden>
                    
                    <label for="product-image" class="upload-label">
                        <span id="upload-text">Insertar Imagen</span>
                        <img id="image-preview" src="" style="display: none;">
                    </label>
                </div>

                <button type="button" class="nav-arrow right"><i class="fas fa-caret-right"></i></button>
                
                <div class="card-line bottom-line"></div>
                <div class="card-line top-line"></div>
            </div>

            <div class="card form-card">
                <div class="vertical-line"></div>

                <div class="form-content">
                    
                    <div class="input-group">
                        <input type="text" name="nombre" placeholder="Insertar Titulo (Máx 50 letras)" required maxlength="50">
                    </div>

                    <div class="input-group">
                        <select name="categoria" required>
                            <option value="" disabled selected>Categoria</option>
                            <% categories.forEach(cat => { %>
                                <option value="<%= cat.tct_id %>"><%= cat.tct_nmb %></option>
                            <% }) %>
                        </select>
                    </div>
                    
                    <div class="input-group">
                        <select name="talla" required>
                            <option value="" disabled selected>Talla</option>
                            <% sizes.forEach(size => { %>
                                <option value="<%= size.ttal_id %>">
                                    <%= size.ttal_tipo %>: <%= size.ttal_valor %>
                                </option>
                            <% }) %>
                        </select>
                    </div>

                    <div class="input-group">
                        <input type="number" name="precio" placeholder="Precio (clp)" min="1" max="99999999" required>
                    </div>

                    <div class="input-group">
                        <textarea name="descripcion" placeholder="Insertar Descripción (Máx 255 caracteres)" rows="5" required maxlength="255"></textarea>
                    </div>

                    <button type="submit" class="btn-publish">Publicar</button>

                </div>
            </div>

        </form>
    </main><%- include('partials/footer') %>

    <script src="js/main.js"></script>
    <script>
        // 1. Elementos
        const inputImg = document.getElementById('product-image');
        const previewImg = document.getElementById('image-preview');
        const uploadText = document.getElementById('upload-text');
        const publishForm = document.getElementById('publish-form');

        // 2. Vista previa de imagen
        inputImg.addEventListener('change', function() {
            const file = this.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    previewImg.src = e.target.result;
                    previewImg.style.display = 'block';
                    uploadText.style.display = 'none';
                }
                reader.readAsDataURL(file);
            }
        });

        // 3. Llenar email oculto
        document.addEventListener('DOMContentLoaded', () => {
            const userEmail = localStorage.getItem('userEmail');
            if (userEmail) {
                document.getElementById('hidden-email').value = userEmail;
            } else {
                alert('Debes iniciar sesión para publicar.');
                window.location.href = '/login';
            }
        });

        // 4. NUEVO: Validación Manual al Enviar
        publishForm.addEventListener('submit', (e) => {
            // Verificamos si hay archivo seleccionado
            if (inputImg.files.length === 0) {
                e.preventDefault(); // Detiene el envío
                alert('¡Falta la imagen! Por favor selecciona una foto para tu prenda.');
            }
            
            // Verificamos si hay email
            if (!document.getElementById('hidden-email').value) {
                 e.preventDefault();
                 alert('Error de sesión. Por favor inicia sesión nuevamente.');
            }
        });
    </script>
</body>
</html>