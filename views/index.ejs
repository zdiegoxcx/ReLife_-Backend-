<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RE-LIFE - Catálogo de Productos</title>
    <link rel="stylesheet" href="css/styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <header class="navbar">
        <div class="logo"><span class="re-white">RE</span>LIFE</div>
        <div class="welcome-user">Cargando...</div>
        <button class="logout-btn">Cerrar Sesión</button>
    </header>

    <main class="content">
        <div class="product-catalog">
            
            <section class="product-section">
                <h2>Nuevos Ingresos</h2>
                
                <div class="product-grid">
                    
                    <% if (products && products.length > 0) { %>
                        
                        <% products.forEach((producto) => { %>
                            <div class="product-item">
                                <img src="<%= producto.timg_url || 'https://via.placeholder.com/150?text=Sin+Foto' %>" alt="<%= producto.tdp_nmb %>">
                                
                                <p><%= producto.tdp_nmb %></p>
                                
                                <small style="color: #888;"><%= producto.categoria %></small>
                                
                                <p class="price">$ <%= producto.tdp_pre %></p>
                            </div>
                        <% }) %>

                    <% } else { %>
                        <p>No hay productos disponibles en este momento.</p>
                    <% } %>

                </div>
            </section>

        </div>

        <aside class="sidebar">
            <div class="account-box">
                <i class="fas fa-user-circle"></i>
                <a href="/user" class="btn-profile">Tu Cuenta</a>
            </div>
            
            <button class="publish-btn" onclick="window.location.href='/publish'">Publicar tu Prenda</button>
            
            <div class="filter-group">
                <h3>Categoría</h3>
                <select class="category-select">
                    <option>---</option>
                    <option>Calzado</option>
                    <option>Chaquetas</option>
                    <option>Sombreros</option>
                    </select>
            </div>
            
            <div class="filter-group">
                <h3>Rango de Precio</h3>
                <div class="price-range">
                    <input type="text" placeholder="Mínimo">
                    <span>–</span>
                    <input type="text" placeholder="Máximo">
                </div>
            </div>
            
            <button class="filter-btn">Filtrar</button>
        </aside>
    </main>

    <script src="js/main.js"></script>
</body>
</html>